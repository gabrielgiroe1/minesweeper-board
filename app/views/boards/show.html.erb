<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h1 class="text-center">Board name: <%= @board.board_name %></h1>
        </div>
        <div class="card-body">
          <div class="table-responsive">
              <div class="text-center me-2 ms-2">
              <% JSON.parse(@board.board_data).each do |row| %>
                  <% row.each do |cell| %>
                    <% if cell == 0 %>
                       <i class="fas fa-square fa-3x me-3 ms-3 mt-3" style="width: 48px; height: 48px;"></i>
                    <% else %>
                        <i class="fas fa-bomb fa-3x me-3 ms-3" style="width: 48px; height: 48px;"></i>
                    <% end %>
                  <% end %>
                <br>
              <% end %>
              </div>
          </div>
          <div class="mt-2 text-center">
            Generated by: <%= @board.email %> on <%= @board.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </div>
        </div>
        <div class="card-footer">
          <%= link_to "Back to all generated boards", board_index_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>