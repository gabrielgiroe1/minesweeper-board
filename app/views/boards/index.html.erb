<% @boards.each do |board| %>
  <div class="card mb-3">
    <div class="card-header align-self-center w-100">
      <h5 class="card-title">Board name: <%= board.board_name %></h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <div class="text-center me-2 ms-2">
          <% if board.board_data %>
            <% JSON.parse(board.board_data).each do |row| %>
              <% row.each do |cell| %>
                <% if cell == 0 %>
                  <i class="fas fa-square fa-3x me-3 ms-2 mt-2" style="width: 48px; height: 48px;"></i>
                <% else %>
                  <i class="fas fa-bomb fa-3x me-2 ms-3" style="width: 48px; height: 48px;"></i>
                <% end %>
              <% end %>
              <br>
            <% end %>
          <% end %>
        </div>
      </div>
      </div>
      <div class="card-footer mt-4">
        <p class="card-text">Generated by: <%= board.email %>
          on <%= board.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>
  </div>
<% end %>