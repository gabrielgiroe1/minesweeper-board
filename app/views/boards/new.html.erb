<%= form_for @board, url: boards_path do |f| %>
  <div class="d-flex justify-content-center align-items-center ">
    <div class="card p-4 w-50">
      <div class="mb-3 ">
        <%= f.label :email, class: "form-label" %>
        <%= f.text_field :email, class: "form-control", required: true %>
      </div>
      <div class="mb-3 ">
        <%= f.label :board_name, class: "form-label" %>
        <%= f.text_field :board_name, class: "form-control", required: true %>
      </div>

      <div class="mb-3 ">
        <%= f.label :width, class: "form-label" %>
        <%= f.number_field :width, class: "form-control", required: true, min: 1, max: 100 %>
      </div>

      <div class="mb-3 ">
        <%= f.label :height, class: "form-label" %>
        <%= f.number_field :height, class: "form-control", required: true, min: 1, max: 100 %>
      </div>

      <div class="mb-3 ">
        <%= f.label :num_mines, class: "form-label" %>
        <%= f.number_field :num_mines, class: "form-control", required: true, in: 1..100 %>
      </div>
      <%= f.submit "Generate Board", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
