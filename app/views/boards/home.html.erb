<div class="d-flex justify-content-center align-items-center">
  <div class="card p-4 w-60">
    <div class="card-header">
      <h1 class="text-center">Welcome to Minesweeper</h1>
    </div>
    <div class="card-body">
      <div class="text-center">
        <h2>Recently Generated Boards:</h2>
        <hr class="my-4">
      </div>

      <% @boards.each do |board| %>
        <li><%= link_to board.board_name, board_path(board) %>, generated by <%= board.email %>
          on <%= board.created_at.strftime("%B %d, %Y at %I:%M %p") %></li>
      <% end %>
      <div class="mt-2 ms-4">
        <%= link_to "View All Generated Boards", board_index_path, class: "btn btn-primary"  %>
      </div>
    </div>
  </div>
</div>